<%- include('header'); -%>
    <!-- Content -->
    <section id="concat-mass-intentions">
        <div class="container">
            <main>
                <div class="py-5 text-center">
                    <h2>Donation</h2>
                    <p class="lead">Please fill the below information to add a Donation.</p>
                </div>

                <div class="row g-5">
                    <div class="col-md-5 col-lg-4 order-md-last">
                        <h4 class="d-flex justify-content-between align-items-center mb-3">
                            <span class="text-primary">Your cart</span>
                        </h4>
                        <ul class="list-group mb-3">
                            <li class="list-group-item d-flex justify-content-between">
                                <span>Total (INR)</span>
                                <strong id="totalAmount">Rs 0</strong>
                            </li>
                        </ul>
                    </div>

                    <div class="col-md-7 col-lg-8">
                        <h4 class="mb-3">Add Donation</h4>
                        <form class="needs-validation" action="/donations" method="post" novalidate>
                            <div class="row g-3">
                                <div class="col-12">
                                    <label for="donorName" class="form-label">Donor Name</label>
                                    <input type="text" class="form-control" id="donorName" name="donorName" placeholder="" value="" required>
                                    <div class="invalid-feedback">
                                        Valid name is required.
                                    </div>
                                </div>

                                <div class="col-sm-6">
                                    <label for="donationDate" class="form-label">Donation Date</label>
                                    <input type="date" class="form-control" id="donationDate" name="donationDate" placeholder="" value="" required>
                                    <div class="invalid-feedback">
                                        Please choose a valid date.
                                    </div>
                                </div>

                                <div class="col-sm-6">
                                    <label for="donationTime" class="form-label">Donation Time</label>
                                    <input type="time" class="form-control" id="donationTime" name="donationTime" placeholder="" value="" required>
                                    <div class="invalid-feedback">
                                        Please choose a valid time.
                                    </div>
                                </div>

                                <div class="col-12">
                                    <label for="donationAmount" class="form-label">Donation Amount</label>
                                    <input type="text" class="form-control" id="donationAmount" name="donationAmount" required>
                                    <div class="invalid-feedback">
                                        Please enter a valid amount.
                                    </div>
                                </div>
                            </div>

                            <hr class="my-4">

                            <h4 class="mb-3">Mode of Payment</h4>

                            <div class="my-3">
                                <div class="form-check form-check-inline">
                                    <input id="cash" name="paymentMethod" value="cash" type="radio" class="form-check-input" checked required>
                                    <label class="form-check-label" for="cash">Cash</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input id="cheque" name="paymentMethod" value="cheque" type="radio" class="form-check-input" required>
                                    <label class="form-check-label" for="cheque">Cheque</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input id="online" name="paymentMethod" value="online" type="radio" class="form-check-input" required>
                                    <label class="form-check-label" for="online">Online</label>
                                </div>
                            </div>
                            <label for="referenceID" class="form-label">Reference ID</label>
                            <input type="text" class="form-control" id="referenceID" name="referenceID" placeholder="" value="" required>
                            <hr class="my-4">

                            <button class="w-100 btn btn-primary btn-lg" type="submit" onclick="submitDonation()">Continue to checkout</button>
                        </form>
                    </div>
                </div>
            </main>
        </div>
    </section>

    <script src="js/donations.js"></script>
    <%- include('footer'); -%>